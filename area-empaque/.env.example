# Configuración de Entorno - Almacén 2 (Empaque)
# Copia este archivo a .env y configura los valores

# ============================================
# ENTORNO
# ============================================
APP_ENV=production
APP_DEBUG=false

# ============================================
# BASE DE DATOS
# ============================================
DB_HOST=localhost
DB_NAME=control_almacen
DB_USER=almacen_user
DB_PASS=CAMBIAR_ESTE_PASSWORD_POR_UNO_SEGURO

# ============================================
# API Y COMUNICACIÓN
# ============================================
# Token para comunicación entre almacenes (opcional)
REMOTE_API_TOKEN=

# URL del servidor remoto (si aplica)
REMOTE_TRANSFER_URL=

# ID del almacén local
LOCAL_ALMACEN_ID=2

# ============================================
# SEGURIDAD
# ============================================
# Genera un token aleatorio con: php -r "echo bin2hex(random_bytes(32));"
SESSION_SECRET=GENERAR_TOKEN_ALEATORIO_AQUI

# ============================================
# LOGS Y DEBUGGING
# ============================================
LOG_LEVEL=error
LOG_FILE=/var/log/almacen2/app.log

# ============================================
# LÍMITES Y PERFORMANCE
# ============================================
MAX_UPLOAD_SIZE=10M
MAX_EXECUTION_TIME=30
MEMORY_LIMIT=256M

# ============================================
# CORREO (si se implementa notificaciones)
# ============================================
MAIL_HOST=smtp.ejemplo.com
MAIL_PORT=587
MAIL_USER=notificaciones@ejemplo.com
MAIL_PASS=
MAIL_FROM=sistema@ejemplo.com
MAIL_FROM_NAME="Sistema Almacén"

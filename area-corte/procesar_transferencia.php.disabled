/**
 * Procesar Transferencia - √Årea de Corte
 * Recibir transferencias desde Empaque con detalle de tallas
 */

require_once 'config.php';

$db = getDB();
$mensaje = '';
$transferencia_id = $_GET['id'] ?? null;
$transferencia_data = null;
$items_data = [];

// Obtener datos de la transferencia desde Empaque
if ($transferencia_id) {
    try {
        $api_url = "http://localhost/2/api/transferencias.php/{$transferencia_id}";
        
        $ch = curl_init($api_url);
        curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
        curl_setopt($ch, CURLOPT_TIMEOUT, 10);
        $response = curl_exec($ch);
        $http_code = curl_getinfo($ch, CURLINFO_HTTP_CODE);
        curl_close($ch);
        
        if ($http_code === 200) {
            $data = json_decode($response, true);
            if (isset($data['success']) && $data['success']) {
                $transferencia_data = $data['data'] ?? null;
            }
        }
    } catch (Exception $e) {
        $mensaje = '<div class="alert alert-danger">Error: ' . $e->getMessage() . '</div>';
    }
}

// Procesar formulario de recepci√≥n
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action']) && $_POST['action'] === 'procesar') {
    // Aqu√≠ ir√≠a la l√≥gica para guardar los datos de recepci√≥n
    // Por ahora solo mostraremos un mensaje
    $mensaje = '<div class="alert alert-success">Transferencia procesada correctamente</div>';
}

// Calcular estad√≠sticas si hay items
$stats_colores = [];
$stats_tallas = [];
$total_items_tablero = 0;

if (!empty($items_data)) {
    foreach ($items_data as $item) {
        $color = trim($item['color_codigo'] ?? $item['color'] ?? '');
        
        $tallas = ['2', '4', '6', '8', '10', '12', '14', '16', 'XS', 'S', 'M', 'L', 'XL', 'XXL'];
        foreach ($tallas as $talla) {
            $key = 'talla_' . $talla;
            $cantidad = intval($item[$key] ?? 0);
            
            if ($cantidad > 0) {
                $total_items_tablero += $cantidad;
                
                if ($color !== '') {
                    if (!isset($stats_colores[$color])) {
                        $stats_colores[$color] = 0;
                    }
                    $stats_colores[$color] += $cantidad;
                }
                
                if (!isset($stats_tallas[$talla])) {
                    $stats_tallas[$talla] = 0;
                }
                $stats_tallas[$talla] += $cantidad;
            }
        }
    }
    
    arsort($stats_colores);
    ksort($stats_tallas);
}

